{
	"extends": [
		"eslint:recommended"
	],

	"parserOptions": {
		"ecmaVersion": 2017,
		"sourceType": "module",
		"ecmaFeatures": {
			"impliedStrict": true
		}
	},

	"env": {
		"node": true,
		"es6": true
	},

	"globals": {
		"atom": false,
		"com": false,
		"localStorage": false
	},

	"rules": {
		"eqeqeq": "error",
		"block-scoped-var": "error",
		"no-mixed-spaces-and-tabs": ["error", "smart-tabs"],
		"semi": "error",
		"no-console": ["error", {"allow": ["error", "info"]}]
	}
}
